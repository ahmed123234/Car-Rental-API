# ============================================
# Car Rental API - Environment Variables
# ============================================

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/carrental
DB_USERNAME=postgres
DB_PASSWORD=password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secret_key_minimum_256_bits_long_change_in_production
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=2592000000

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# Application Profile
SPRING_PROFILES_ACTIVE=dev

# Zipkin Configuration
ZIPKIN_BASE_URL=http://localhost:9411
ZIPKIN_ENABLED=false

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_CARRENTAL=DEBUG

# Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=carrental
